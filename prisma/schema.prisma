generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Preference {
    id    Int    @id @default(autoincrement())
    key   String @unique
    value String
}

model Storage {
    id       Int              @id @default(autoincrement())
    name     String
    type     String
    contents InventoryEntry[]
    rules    StorageRule[]
}

model InventoryEntry {
    id         Int      @id @default(autoincrement())
    name       String
    scryfallId String
    oracleId   String
    treatment  String
    storage    Storage? @relation(fields: [storageId], references: [id])
    storageId  Int?
    qty        Int
}

model StorageRule {
    id                 Int     @id @default(autoincrement())
    comparisonField    String
    comparisonOperator String
    comparisonValue    String
    storage            Storage @relation(fields: [storageId], references: [id])
    storageId          Int
}
